<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- No Action bar theme -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- TextView theme for the screen title -->
    <style name="SearchReg_ScreenTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/gotyou</item>
        <item name="android:textColor">#00b1ff</item>
        <item name="android:textScaleX">1.2</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:typeface">normal</item>
    </style>


    <!-- Theme for the car image -->
    <style name="CarImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:tint">#535b68</item>
        <item name="android:layout_below">@id/search_frag_tv_app_name</item>
    </style>

    <!-- LinearLayout theme -->
    <style name="LinearLayout_Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:background">@drawable/ll_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_below">@id/cv</item>
    </style>


    <!-- TextView theme for the reg field -->
    <style name="SearchReg_TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textColorHint">#72757c</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:hint">@string/reg</item>
    </style>

    <!-- Theme for button search -->
    <style name="Button_Search">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_search</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:text">@string/search_reg</item>
        <item name="android:textColor">#FF5722</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Theme for button scan -->
    <style name="Button_Scan">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_scan</item>
        <item name="android:text">@string/scan_reg</item>
        <item name="android:textColor">#4fa5d5</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowActionBar">false</item>
    </style>


</resources>
